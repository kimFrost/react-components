{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "dist",
        "jsx": "react",
        "skipLibCheck": true,
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/*"
    ]
}