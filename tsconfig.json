{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "declaration": true,
        "declarationDir": "dist",
        "jsx": "react",
        "skipLibCheck": true,
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/*"
    ]
}